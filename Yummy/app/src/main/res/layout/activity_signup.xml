<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <EditText
        android:id="@+id/activity_signup_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/activity_signup_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/activity_signup_et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/activity_signup_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/activity_signup_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />


            <Button
                android:id="@+id/activity_signup_btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>