<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner

                android:id="@+id/activity_order_spinner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </Spinner>

            <EditText
                android:id="@+id/activity_order_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:hint="Quantity"
                />

            <EditText
                android:id="@+id/activity_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:hint="Time"
                />

            <EditText
                android:id="@+id/activity_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:hint="Date"
                />

            <EditText
                android:id="@+id/activity_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:hint="Detail"
                />

            <EditText
                android:id="@+id/activity_order_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:hint="Userid"
                />

            <EditText
                android:id="@+id/activity_order_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:hint="Username"
                />

            <Button
                android:id="@+id/activity_order_btn_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>